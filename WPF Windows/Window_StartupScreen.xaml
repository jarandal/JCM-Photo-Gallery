<Window x:Class="JMC_Photo_Gallery.Window_StartupScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:pd="clr-namespace:JMC_Photo_Gallery"
    Title="Startup Screen" Height="200" Width="300"
        AllowsTransparency="True" WindowStyle="None" Background="#00FFFFFF" WindowStartupLocation="CenterScreen" Topmost="True">
    <Border Name="WindowBorder" CornerRadius="10,10,10,10" BorderThickness="8" BorderBrush="#99000000" Background="{DynamicResource WindowGradient}">
        <Border CornerRadius="7,7,7,7" Background="#99FFFFFF">
            <UniformGrid Columns="1">
                <Label />
                <Label FontFamily="Courier New" FontSize="20" FontWeight="Bold" Foreground="#404040" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">JMC Photo Gallery</Label>
                <Label FontFamily="Courier New" FontSize="14" FontWeight="Bold" Foreground="#404040" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">Loading Your Profile</Label>
                <Label />
            </UniformGrid>
        </Border>
    </Border>
</Window>
